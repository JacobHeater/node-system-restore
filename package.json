{
  "name": "system-restore",
  "version": "1.0.4",
  "description": "Create Windows System Restore Points using NodeJS.",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "clean": "rimraf coverage/* dist/* tmp/* pkg/*",
    "build": "tsc -p tsconfig.release.json",
    "watch": "tsc -w -p tsconfig.release.json",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "pretest": "npm run lint",
    "test": "npm run test-only",
    "test-only": "jest --coverage",
    "test:watch": "jest --watch",
    "package": "node ./build-scripts/package.js",
    "build-n-package": "npm run build && npm run package",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/JacobHeater/node-system-restore.git"
  },
  "keywords": [
    "Node",
    "Windows",
    "System Restore",
    "Restore Point"
  ],
  "author": "Jacob Heater <jacobheater@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/JacobHeater/node-system-restore/issues"
  },
  "homepage": "https://gitlab.com/JacobHeater/node-system-restore#README",
  "main": "dist/index.js",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "jest": "^29.7.0",
    "nexe": "^5.0.0-beta.4",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.4",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "fs-extra": "^11.3.0",
    "yargs": "^18.0.0"
  }
}
